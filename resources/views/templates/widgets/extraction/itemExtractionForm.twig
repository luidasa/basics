
<form class="form-horizontal" method="post" action="{{ partida is null ? path_for('extraction.item.add', {'orden_id': orden.id}) : path_for('extraction.item.edit', {'orden_id': orden.id, 'id':partida.id}) }}">
  <div class="panel panel-default">
    <div class="panel-heading">
      Agregar una nueva partida a la extracción {{ orden.id }}
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <br/>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="numeroParte" class="col-sm-3 control-label">N/P</label>
          <div class="col-sm-9">
            <input type="text" maxlength="20" required autofocus class="form-control" id="numeroParte" name="numeroParte" placeholder="Numero de parte" value="{{ partida.np }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="descripcion" class="col-sm-3 control-label">Descripción</label>
          <div class="col-sm-9">
            <input type="text" maxlength="50" required class="form-control" id="descripcion" name="descripcion" placeholder="Descripción" value="{{ partida.descripcion }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="cantidad" class="col-sm-3 control-label">Cantidad</label>
          <div class="col-sm-9">
            <input type="number" max="{{ partida.producto.cantidad }}" required class="form-control" id="cantidad" name="cantidad" placeholder="Numero de piezas" value="{{ partida.cantidad }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="po" class="col-sm-3 control-label">PO</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" required class="form-control" id="po" name="po" placeholder="Numero de parte" value="{{ partida.po }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="lote" class="col-sm-3 control-label">Lote</label>
          <div class="col-sm-9">
            <input type="number" required class="form-control" id="lote" name="lote" placeholder="Numero de Lote" value="{{ partida.lote }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="precioUnitario" class="col-sm-3 control-label">Precio unitario</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" step="0.000001" required class="form-control" id="precioUnitario" name="precioUnitario" placeholder="Precio unitario" value="{{ partida.precio_unitario }}"/>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="wsr" class="col-sm-3 control-label">WSR</label>
          <div class="col-sm-9">
            <input type="text" maxlength="20" required autofocus class="form-control" id="wsr" name="wsr" placeholder="WSR" value="{{ partida.wsr }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="pesoNeto" class="col-sm-3 control-label">Peso neto</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" required class="form-control" id="pesoNeto" name="pesoNeto" placeholder="Peso neto" value="{{ partida.producto.peso_neto }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="pesoBruto" class="col-sm-3 control-label">Peso Bruto</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" required class="form-control" id="pesoBruto" name="pesoBruto" placeholder="Peso bruto" value="{{ partida.producto.peso_bruto }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="idPallets" class="col-sm-3 control-label">Id de pallet</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="idPallets" name="idPallets" placeholder="Identificador de pallets" value="{{ partida.id_pallet }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="cajas" class="col-sm-3 control-label">Id de caja</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="idCajas" name="idCajas" placeholder="Identificador de cajas" value="{{ partida.id_caja }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="precioTotal" class="col-sm-3 control-label">Precio total</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" step="0.000001" readonly class="form-control" id="precioTotal" name="precioTotal" placeholder="Precio total" value="{{ partida.precio_total }}"/>
          </div>
        </div>
      </div>
  </div>
    <div class="panel-footer">
      <input type="hidden" id="id" name="id" value="{{ orden.id }}">
      <input type="hidden" id="producto_id" name="producto_id" value="{{ partida.producto_id }}">
      <button id="operacion" name="operacion" value="Guardar" type="submit" class="btn btn-default btn-primary" />
        <i class="fa fa-save"></i> Guardar
      </button>
      <button id="operacion" name="operacion" value="Nuevo" type="submit" class="btn btn-success" />
        <i class="fa fa-plus-circle"></i> Nuevo
      </button>
    </div>
  </div>
</form>
