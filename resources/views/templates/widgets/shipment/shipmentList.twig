<div class="panel panel-default">
  <div class="panel-heading">
    Embarques recibidos
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="dataTable_wrapper">
      <table width="100%" class="table table-striped table-bordered table-hover tabla" id="embarques">
        <thead>
          <tr>
            <th>N/P</th>
            <th>Descripci√≥n</th>
            <th>PO</th>
            <th>Lote</th>
            <th>Recibidas</th>
            <th>Cantidad</th>
            <th>Consecutivo</th>
            <th>Numero pedimento</th>
            <th>Extraer</th>
          </tr>
        </thead>
        <tbody>
          {% for producto in productos %}
            <tr class="{{ loop.index % 2 == 0 ? 'odd' : 'even' }}">
              <td>{{ producto.np }}</td>
              <td>{{ producto.descripcion }}</td>
              <td>{{ producto.po }}</td>
              <td>{{ producto.lote }}</td>
              <td>{{ producto.cantidad }}</td>
              <td>{{ producto.cantidad_actual }}</td>
              <td>{{ producto.consecutivo }}</td>
              <td>{{ producto.numero_pedimento }}</td>
              <td style="text-align: center;"><a href="{{ path_for('extraction.product.add', {'id': producto.id}) }}"><span class="fa fa-sign-out"></span></a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <a href="{{ path_for('shipments.export') }}" class="btn btn-primary btn-default"><span class="fa fa-download"></span> Exportar</a>
    </div>
  </div>
</div>
