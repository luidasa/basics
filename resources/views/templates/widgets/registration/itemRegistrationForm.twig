<form class="form-horizontal" method="post" action="{{ partida is null ? path_for('registration.item.add', {'orden_id':orden.id}) :  path_for('registration.item.edit', {'orden_id':orden.id, 'partida_id':partida.id}) }}">
  <div class="panel panel-default">
    <div class="panel-heading">
      Partida de embarque
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <br/>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="numeroParte" class="col-sm-3 control-label">N/P</label>
          <div class="col-sm-9">
            <input type="text" maxlength="20" required class="form-control" id="numeroParte" name="numeroParte" placeholder="Numero de parte" value="{{ partida.np }}" autofocus/>
          </div>
        </div>
        <div class="form-group">
          <label for="descripcion" class="col-sm-3 control-label">Descripci贸n</label>
          <div class="col-sm-9">
            <input type="text" maxlength="50" required class="form-control" id="descripcion" name="descripcion" placeholder="Descripci贸n" value="{{ partida.descripcion }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="cantidad" class="col-sm-3 control-label">Cantidad</label>
          <div class="col-sm-9">
            <input type="number" required class="form-control" id="cantidad" name="cantidad" placeholder="Cantidad de piezas" value="{{ partida.cantidad }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="po" class="col-sm-3 control-label">PO</label>
          <div class="col-sm-9">
            <input type="number" maxlength="50" required class="form-control" id="po" name="po" placeholder="Orden de producto" value="{{ partida.po }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="lote" class="col-sm-3 control-label">Lote</label>
          <div class="col-sm-9">
            <input type="number" required maxlength="10" class="form-control" id="lote" name="lote" placeholder="Numero de Lote" value="{{ partida.lote }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="precioUnitario" class="col-sm-3 control-label">Precio unitario</label>
          <div class="col-sm-9">
            <input type="number" maxlength="15" step="0.000001" required class="form-control" id="precioUnitario" name="precioUnitario" placeholder="Precio unitario" value="{{ partida.precio_unitario }}"/>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="pesoNeto" class="col-sm-3 control-label">Peso neto</label>
          <div class="col-sm-9">
            <input type="number" step="0.01" required class="form-control" id="pesoNeto" name="pesoNeto" placeholder="Peso neto" value="{{ partida.peso_neto }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="pesoBruto" class="col-sm-3 control-label">Peso bruto</label>
          <div class="col-sm-9">
            <input type="number" step="0.01" required class="form-control" id="pesoBruto" name="pesoBruto" placeholder="Peso bruto" value="{{ partida.peso_bruto }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="idPallets" class="col-sm-3 control-label">Id pallet</label>
          <div class="col-sm-9">
            <input type="text" required class="form-control" id="idPallets" name="idPallets" placeholder="Identificador de pallets" value="{{ partida.id_pallet }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="cajas" class="col-sm-3 control-label">Id caja</label>
          <div class="col-sm-9">
            <input type="text" required class="form-control" id="idCajas" name="idCajas" placeholder="Identificador de cajas" value="{{ partida.id_caja }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="precioTotal" class="col-sm-3 control-label">Precio total</label>
          <div class="col-sm-9">
            <input type="number" readonly step="0.0001" class="form-control" id="precioTotal" name="precioTotal" placeholder="Precio total" value="{{ partida.precio_total | number_format(4, ".", "") }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="fraccionArancelaria" class="col-sm-3 control-label">Fracci贸n arancelaria</label>
          <div class="col-sm-9">
            <input type="number" maxlength="5" step="0.01" class="form-control" id="fraccionArancelaria" name="fraccionArancelaria" placeholder="Fracci贸n arancelaria" value="{{ partida.fraccion_arancelaria }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="umt" class="col-sm-3 control-label" id="umtLabel">UMT</label>
          <div class="col-sm-9">
            <input type="number" maxlength="5" class="form-control" id="umt" name="umt" placeholder="Si es de tipo Transit requiere UMT" value="{{ partida.umt }}"/>
          </div>
        </div>
    </div>
  </div>
    <div class="panel-footer">
      <input type="hidden" class="form-control" id="id" placeholder="Id" disabled value="{{ orden.id }}">
      <button id="operacion" name="operacion" value="Guardar" type="submit" class="btn btn-default btn-primary" />
        <i class="fa fa-save"></i> Guardar
      </button>
      <button id="operacion" name="operacion" value="Nuevo" type="submit" class="btn btn-success" />
        <i class="fa fa-plus-circle"></i> Nuevo
      </button>
    </div>
  </div>
</form>
