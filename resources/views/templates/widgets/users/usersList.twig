<div class="panel panel-default">
  <div class="panel-heading">
    Usuarios que se encuentran registrados en el sistema.
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="dataTable_wrapper">
      <table width="100%" class="table table-striped table-bordered table-hover tabla" id="usuarios">
        <thead>
          <tr>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Editar</th>
            <th>Borrar</th>
          </tr>
        </thead>
        <tbody>
          {% for usuario in usuarios %}
            <tr class="{{ loop.index % 2 == 0 ? 'odd' : 'even' }}">
              <td>{{ usuario.email }}</td>
              <td>{{ usuario.first_name }}</td>
              <td>{{ usuario.last_name }}</td>
              <td style="text-align: center;"><a href="{{ path_for('account.edit', {'id' : usuario.id }) }}"><span class="fa fa-edit"></span></a></td>
              <td style="text-align: center;"><a href="{{ path_for('account.delete', {'id' : usuario.id }) }}"><span class="fa fa-trash"></span></a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <a href="{{ path_for('account.add') }}" class="btn btn-primary btn-default"><span class="fa fa-plus"></span> Agregar</a>
    </div>
  </div>
</div>
