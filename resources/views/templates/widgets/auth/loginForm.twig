<form action="{{ path_for('auth.signin') }}" method="post" role="form">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-lg-6">
              <h3 class="panel-title">Inicio de sesión</h3>
            </div>
            <div class="col-lg-6 text-right">
              <a href="{{ path_for('auth.signup') }}"> Registrate</a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <fieldset>
            <div class="form-group input-group">
              <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
              <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
            </div>
            <div class="form-group input-group">
              <div class="input-group-addon"><i class="fa fa-lock"></i></div>
              <input class="form-control" placeholder="Password" name="password" type="password" value="">
            </div>
            <div class="checkbox">
              <label>
                <input name="remember" type="checkbox" value="Remember Me">Recuerdame
              </label>
            </div>
          </fieldset>
        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-lg-6">
              <!-- Change this to a button or input when using this as a form -->
              <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Iniciar</a>
              </div>
              <div class="col-lg-6 text-right">
                <a href="{{ path_for('auth.password.change') }}">Olvidaste tu contraseña?</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
