<div class="panel panel-default">
  <div class="panel-heading">
    Mis preferencias de la aplicaci√≥n
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <form class="form-horizontal" method="post" action="{{ path_for('auth.settings' ) }}">
      <br/>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="renglones" class="col-sm-2 control-label">Renglones</label>
          <div class="col-sm-10">
            <input type="text" maxlenght="50" required class="form-control" id="renglones" name="renglones" placeholder="Numero de renglones" value="{{ preferencia.paginacion }}"/>
          </div>
        </div>
        <div class="form-group">
          <label for="email" class="col-sm-2 control-label">Idioma</label>
          <div class="col-sm-10">
            <input type="number" maxlenght="10" required class="form-control" id="telefono" name="telefono" placeholder="Telefono" value="{{ usuario.telefono }}"/>
          </div>
        </div>
      </div>
    </div>
  </form>
  <div class="panel-footer">
      <button id="operacion" name="operacion" value="Guardar" type="submit" class="btn btn-default btn-primary" />
        <i class="fa fa-save"></i> Guardar
      </button>
  </div>
</div>
